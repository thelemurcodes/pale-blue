<div class="card" id="home">
  <%= link_to raffle_raffle_item_path(raffle_item.raffle, raffle_item) do %>
  <div class="frame">
    <% if raffle_item.photo.key.present?  %>
      <img style="border: 1px white solid" src= <%= cl_image_path raffle_item.photo.key %>>
    <% else %>
      <%= image_tag "banner", style: "border: 1px white solid" %>
    <% end %>
  </div>
  <% end %>
  <% if raffle_item.name.present? %>
    <h4><%= Faker::Tea.variety %></h4>
  <% else  %>
    <h4><%= Faker::Tea.variety %></h4>
  <% end %>
  <% num = rand(0..1) %>
  <p style="margin-block:0"><%= num == 0 ? 'Physical Item' : 'Digital Item' %></p>
  <p style="margin-block:0">Tickets Redeemed: <%= rand(500) %></p>
</div>
