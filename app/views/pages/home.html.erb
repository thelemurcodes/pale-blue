<div class="box banner bg-img" id="first">
  <div class="with-sidebar" id="landing">
    <div id="title">
      <h1 id="pale">PaleBlue.is: </h1>
      <h1 id="place">the place to <h1 class="typed"></h1></h1>
      <div class="cluster mobile-center">
        <button class="box hidden-large">Connect Wallet</button>
        <button class="box">Explore Collections</button>
